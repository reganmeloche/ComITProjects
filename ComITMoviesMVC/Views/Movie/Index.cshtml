@model List<Movie>
@{
    ViewData["Title"] = "All Movies";
}

<div>
    <h3>@ViewData["Title"]</h3>
    <hr/>
    <div id="movie-table-holder">
        <table id="movie-table" class="table-striped table table-bordered">
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Year</th>
                <th>Rating</th>
                <th> </th>
            </tr>
        
        @foreach (var movie in Model) { 
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Director</td>
                <td>@movie.Year</td>
                <td>@movie.AverageRating</td>
                <td><a asp-action="Details" asp-route-id="@movie.Id" >Details</a></td>
            </tr>
        }

        </table>
    </div>
</div>