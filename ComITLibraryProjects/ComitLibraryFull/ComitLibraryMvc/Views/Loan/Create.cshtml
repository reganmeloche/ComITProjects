@model LoanViewModel

<div>
    <form asp-action="Create">
        <input type="hidden" asp-for="BookId"/>
        <div class="form-group">
            <label asp-for="BookId">Book</label>
            <input type="text" class="form-control" asp-for="Title" disabled/>
        </div>
        <div class="form-group">
            <label asp-for="PatronId">Patron</label>
            <select asp-for="PatronId" asp-items="@Model.PatronList" class="form-control">
            </select>
            @* <input type="text" class="form-control" asp-for="PatronId"> *@
            <span class="text-danger" asp-validation-for="PatronId"></span>
        </div>

        <button type="submit" class="btn btn-success">Create Loan</button>
    </form>
</div>